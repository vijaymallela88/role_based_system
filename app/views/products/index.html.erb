<p id="notice"><%= notice %></p>
<%if @role.present? && @role.name == "Admin"%>
<%if @roles.length > 1%>
<p><%= link_to "Employees", employees_path%></p>
<%else%>
<a href="#" onClick="check_emp();">Employees</a>
<%end%>
<p><%= link_to "Roles", roles_path%></p>
<%end%>

<%if @products.present?%>
<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <%if @user_roles.include?("show")%>
        <td><%= link_to 'Show', product %></td>
        <%end%>
        <%if @user_roles.include?("update")%>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <%end%>
        <%if @user_roles.include?("delete")%>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>
<br>
<%if @user_roles.include?("create")%>
<%= link_to 'New Product', new_product_path %>
<%end%>

<script type="text/javascript">
  function check_emp()
{
   alert("Please create role to create user!");
}
</script>